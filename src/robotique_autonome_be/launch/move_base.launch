<launch>

  <param name="use_sim_time" value="true" />
  
  <node pkg="robotique_autonome_be" type="pioneer_driver.py" name="driver"/>

  <!-- The nodes for integrating the laserscans into the map -->
  <node pkg="gmapping" type="slam_gmapping" name="mapping" output="screen">
    <remap from="scan" to="/pioneer_p3dx/front_scan"/> 

    <!-- The frame attached to the mobile base. -->
    <param name="base_frame" value="Pioneer_p3dx"/>

    <!-- The frame attached to the map. -->
    <param name="map_frame" value="map"/>

    <!-- The frame attached to the odometry system. -->
    <param name="odom_frame" value="/Pioneer_p3dx/odom"/>
    
    <param name="xmin" value="-10"/>
    <param name="xmax" value="10"/>
    <param name="ymin" value="-10"/>
    <param name="ymax" value="10"/>
    <param name="maxUrange" value="5.9" /> 
    <param name="maxRange" value="6" />

    <param name="map_update_interval" value="0.5"/>
  </node>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="controller_frequency" value="5.0"/>
    <param name="recovery_behavior_enabled" value="false"/>
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find robotique_autonome_be)/share/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find robotique_autonome_be)/share/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find robotique_autonome_be)/share/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find robotique_autonome_be)/share/global_costmap_params.yaml" command="load" />
    <!--<rosparam file="$(find robotique_autonome_be)/share/trajectory_planner_ros.yaml" command="load" />-->
    <rosparam file="$(find robotique_autonome_be)/share/dwa_planner_params.yaml" command="load" />
  </node>

</launch>
