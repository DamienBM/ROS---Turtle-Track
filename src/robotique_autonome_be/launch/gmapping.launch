<launch>
  <param name="use_sim_time" value="true" />


  <!-- The nodes for controlling the pioneer with the joystick -->
  <node pkg="joy" type="joy_node" name="joy">
    <param name="autorepeat_rate" value="10.0" />	
  </node>
  <node pkg="robotique_autonome_be" type="joy_to_twist.py" name="joy_to_twist"/>
	
  <node pkg="robotique_autonome_be" type="pioneer_driver.py" name="driver"/>

  <!-- The nodes for integrating the laserscans into the map -->
  <node pkg="gmapping" type="slam_gmapping" name="mapping" output="screen">
    <remap from="scan" to="/pioneer_p3dx/front_scan"/> 

    <!-- The frame attached to the mobile base. -->
    <param name="base_frame" value="Pioneer_p3dx"/>

    <!-- The frame attached to the map. -->
    <param name="map_frame" value="map"/>

    <!-- The frame attached to the odometry system. -->
    <param name="odom_frame" value="/Pioneer_p3dx/odom"/>
    
    <param name="xmin" value="-10"/>
    <param name="xmax" value="10"/>
    <param name="ymin" value="-10"/>
    <param name="ymax" value="10"/>
    <param name="maxUrange" value="5.9" /> 
    <param name="maxRange" value="6" />

    <param name="map_update_interval" value="0.5"/>
  </node>



</launch>
